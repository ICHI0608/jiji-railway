# 🌊 Jiji Phase 5環境変数テンプレート
# 【Google Sheets API統合・本格運用設定】

# ===== 基本システム設定 =====
NODE_ENV=production
PORT=3000
RAILWAY_ENVIRONMENT=production

# ===== LINE Bot設定 =====
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token_here
LINE_CHANNEL_SECRET=your_line_channel_secret_here

# ===== OpenAI API設定 =====
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-5
OPENAI_MAX_TOKENS=1000

# ===== データベース設定（Phase 4 + RLSセキュア対応） =====
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# 🔒 RLSセキュリティ強化（推奨）
# Supabase Dashboard → Settings → API → service_role secret
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ===== Google Sheets API設定（Phase 5新規） =====
# Google Cloud Console（https://console.cloud.google.com/）で取得
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id
GOOGLE_SHEETS_API_KEY=your_google_sheets_api_key

# サービスアカウント認証（推奨）
GOOGLE_SERVICE_ACCOUNT_EMAIL=your_service_account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"

# ===== Google Sheets設定 =====
# 79店舗データスプレッドシート
JIJI_SHOPS_SPREADSHEET_ID=your_spreadsheet_id_here
JIJI_SHOPS_SHEET_NAME=ShopsData

# フィードバック収集スプレッドシート
FEEDBACK_SPREADSHEET_ID=your_feedback_spreadsheet_id
FEEDBACK_SHEET_NAME=UserFeedback

# ユーザー統計スプレッドシート
STATS_SPREADSHEET_ID=your_stats_spreadsheet_id
STATS_SHEET_NAME=UserStats

# ===== 監視・アラート設定 =====
MONITORING_ENABLED=true
ALERT_EMAIL=admin@your-domain.com
ALERT_WEBHOOK_URL=https://your-slack-webhook-url

# パフォーマンス閾値設定
MAX_RESPONSE_TIME_MS=3000
MAX_ERROR_RATE=0.05
MAX_MEMORY_MB=512

# ===== ログ・デバッグ設定 =====
LOG_LEVEL=info
DEBUG_MODE=false
REQUEST_LOGGING=true

# ===== セキュリティ設定 =====
CORS_ORIGIN=https://jiji-bot-production.up.railway.app
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=100

# ===== β-testing設定 =====
BETA_TESTING_MODE=true
FEEDBACK_COLLECTION_ENABLED=true
USER_ANALYTICS_ENABLED=true

# ===== Phase 5機能フラグ =====
GOOGLE_SHEETS_ENABLED=false  # Phase 5で true に変更
SUPABASE_FALLBACK_ENABLED=true
ADVANCED_ANALYTICS_ENABLED=true
PREMIUM_FEATURES_ENABLED=false