# =================================
# Dive Buddy's v2.8 環境変数設定例
# =================================

# LINE Bot設定（必須）
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token_here
LINE_CHANNEL_SECRET=your_line_channel_secret_here

# データベース設定（Supabase - 必須）
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# OpenAI設定（必須）
OPENAI_API_KEY=sk-your_openai_api_key_here

# =================================
# 既存設定（継続使用）
# =================================

# Google Sheets API Configuration
GOOGLE_SERVICE_ACCOUNT_KEY_FILE=./credentials/google-service-account.json
GOOGLE_SHEETS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----
YOUR_GOOGLE_PRIVATE_KEY_HERE
-----END PRIVATE KEY-----
"
GOOGLE_SHEETS_CLIENT_EMAIL="your-service-account@your-project.iam.gserviceaccount.com"
GOOGLE_PROJECT_ID="your-google-project-id"

# Jiji Shops Spreadsheet ID
JIJI_SHOPS_SPREADSHEET_ID="your_spreadsheet_id_here"

# Application Settings
NODE_ENV=development
PORT=3000

# =================================
# オプション設定
# =================================

# Webhook URL（本番環境）
WEBHOOK_URL=https://your-domain.com/webhook

# セキュリティ設定
SESSION_SECRET=your_random_session_secret_here
JWT_SECRET=your_jwt_secret_here

# ログ設定
LOG_LEVEL=info
LOG_FILE=logs/jiji-bot.log

# キャッシュ設定（Redis使用時）
REDIS_URL=redis://localhost:6379

# 監視・分析設定
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx